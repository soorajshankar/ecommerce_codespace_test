{
  "name": "Hasura DDN Codespace with Docker",
  "image": "mcr.microsoft.com/vscode/devcontainers/docker:0-ubuntu-20.04",
  "customizations": {
    "vscode": {
      "extensions": [
        "HasuraHQ.hasura"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "terminal.integrated.shellArgs.linux": [
          "-l"
        ]
      }
    }
  },
  "postCreateCommand": [
    "curl -L https://graphql-engine-cdn.hasura.io/ddn/cli/v1/get.sh | bash",
    "ddn auth login --pat ${secrets.HASURA_PAT}"
  ]
}
